root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{java,xml,scala,avdl}]
indent_style = space
indent_size = 2

[*.sh]
indent_size = 2

# Tab indentation (no size specified)
[{Makefile,makefile,GNUmakefile,*.make}]
indent_style = tab
